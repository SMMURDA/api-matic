{
  "title": "QR Code Generator",
  "description": "Generates a base64-encoded QR Code from the provided text or URL.",
  "method": "POST",
  "path": "/api/qrcode",
  "placeholder": "Enter text or URL",
  "response": {
    "dataUrl": "data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAA..."
  },
  "curl": "curl -X POST \\\n  -H \"Content-Type: application/json\" \\\n  -H \"Authorization: Bearer YOUR_ACCESS_TOKEN\" \\\n  'https://matic.eu.org/api/qrcode' \\\n  -d '{\"text\": \"https://matic.eu.org\"}'"
}
